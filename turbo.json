{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "storybook-static/**"
      ],
      "env": ["DATABASE_URL", "PORT", "NODE_ENV", "WEB_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "^build"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^db:generate", "^build"],
      "persistent": true
    },
    "db:generate": {
      "cache": false,
      "outputs": ["generated/**"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    }
  }
}
