generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  todos Todo[]
}

model Todo {
  id        Int     @id @default(autoincrement())
  title     String
  description String?
  isDone Boolean @default(false)
  userId  Int
  user    User    @relation(fields: [userId], references: [id])
}