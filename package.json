{
  "name": "boilerplate-template",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "pnpm exec biome format --write",
    "format-check": "pnpm exec biome check",
    "check-types": "turbo run check-types",
    "sync-packages": "pnpm dlx syncpack fix-mismatches",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmax99/boilerplate-template.git"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18"
  }
}
