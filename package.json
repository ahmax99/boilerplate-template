{
  "name": "boilerplate-template",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "pnpm exec prettier --write .",
    "format-check": "pnpm exec prettier --check .",
    "check-types": "turbo run check-types",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm exec eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,css,md,json}": [
      "pnpm exec prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmax99/boilerplate-template.git"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18"
  }
}
