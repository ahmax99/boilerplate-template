{
  "name": "boilerplate-template",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "pnpm exec biome format --write",
    "format-check": "pnpm exec biome check",
    "check-types": "turbo run check-types",
    "check-updates": "pnpm outdated --recursive",
    "update-packages": "pnpm update --latest --recursive",
    "check-mismatches": "pnpm dlx syncpack list-mismatches",
    "sync-packages": "pnpm dlx syncpack fix-mismatches",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,yml,yaml}": [
      "biome check --staged --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmax99/boilerplate-template.git"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.0",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=18"
  }
}
